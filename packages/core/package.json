{
  "name": "@dataspecer/core",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "prebuild": "node ./build/prebuild.js && node ./build/compile-sparql.js",
    "build:watch": "tsc -w",
    "prebuild:watch": "npm run prebuild",
    "lint": "eslint ./src",
    "prettier": "prettier -w ./src",
    "test": "jest \"^(.*/)*(.*\\.)*(spec)\\.[jt]s$\" --passWithNoTests",
    "integration-test": "jest \"^(.*/)*(.*\\.)*(test)\\.[jt]s$\" --passWithNoTests"
  },
  "dependencies": {
    "@types/jsonld": "^1.5.6",
    "@types/n3": "^1.10.4",
    "js-string-escape": "^1.0.1",
    "jsonld": "^5.2.0",
    "minipass-fetch": "^1.4.1",
    "n3": "^1.13.0",
    "rdflib": "^2.2.17",
    "uri-js": "^4.4.1"
  },
  "devDependencies": {
    "@types/jest": "^28.1.1",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^28.1.1",
    "prettier": "^2.5.1",
    "ts-jest": "^28.0.4",
    "typescript": "^4.5.5"
  },
  "browser": {
    "buffer": false
  },
  "publishConfig": {
    "directory": "lib"
  }
}
