generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database/database.db"
}

model Specification {
  id                  String          @id
  name                String?
  pimStore            String
  DataPsm             DataPsm[]
  linkedSpecification Specification[] @relation("SpecificationToSpecification")
  Specification       Specification?  @relation("SpecificationToSpecification", fields: [specificationId], references: [id])
  specificationId     String?
}

model DataPsm {
  id              String        @id
  name            String?
  store           String
  specification   Specification @relation(fields: [specificationId], references: [id])
  specificationId String
}
